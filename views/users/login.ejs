<%- include ('../partials/header') %>
<div class="container">

    <h1>User Login</h1>

    <form method="POST" action="/mentorapp/user/login">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" class="login-email" id="email" name="email" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" class="login-password" id="password" name="password" />
        </div>

        <button type="submit" class="btn btn-primary login" id="login">Submit</button>
    </form>

</div>

<%- include ('../partials/footer') %>