<%- include ('../partials/header') %>

<img src="<%=currentuserprofile.img%>" class="profile-pic">

<h1><%=currentuserprofile.firstname%></h1>

<h1><%=currentuserprofile.lastname%></h1>

<%if (currentuserprofile.description){%>
    <p><%=currentuserprofile.description%></p>
<%}%>

<a class="btn btn-primary" href="/mentorapp/user/<%=currentuserprofile.slug%>/edit" role="button">Edit profile</a>


<!-- delete route -->
<form method="POST" action="/mentorapp/user/<%=currentuserprofile.slug%>/delete?_method=DELETE">
    <button type="submit" class="btn btn-primary">Delete account</button>
</form>
