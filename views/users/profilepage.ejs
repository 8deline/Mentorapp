<%- include ('../partials/header') %>
<link rel="stylesheet" href="/css/profile.css">
</head>

<%- include ('../partials/navbar') %>

<div class="container profile-section">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <img src="<%=currentuserprofile.img%>" class="profilepage-pic">
                
            </div>
            
        </div>

        <div class="col-6">
            <div class="profile-name">
                <h1 class="profile-name small"><%=currentuserprofile.firstname%> <%=currentuserprofile.lastname%> </h1>
            </div>
            
            <a class="btn btn-special-light-green" href="/mentorapp/user/<%=currentuserprofile.slug%>/edit" role="button">Edit profile</a>
            <%if (currentuserprofile.description){%>
            <h1 class="small bio-title">Bio:</h1>
            <p class="small">
                
                    <%=currentuserprofile.description%>
               
            </p>
            <%}%>
        </div>
    </div>
</div>


<h1><%=currentuserprofile.firstname%></h1>

<h1><%=currentuserprofile.lastname%></h1>



<p><%=currentuserprofile.mentors.length%>  mentors</p>

<h1>Following</h1>
<a class="btn btn-primary" href="/mentorapp/user/<%=currentuserprofile.slug%>/following" role="button">Following</a>

<a class="btn btn-primary" href="/mentorapp/user/<%=currentuserprofile.slug%>/edit" role="button">Edit profile</a>


