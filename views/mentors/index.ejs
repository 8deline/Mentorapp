<%- include ('../partials/header') %>

<link rel="stylesheet" href="/css/index.css">

</head>

<%- include ('../partials/navbar') %>

<div id="carouselhomepage" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselhomepage" data-slide-to="0" class="active"></li>
        <li data-target="##carouselhomepage" data-slide-to="1"></li>
      </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/Homepage/joshua-ness--bEZ_OfWu3Y-unsplash.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/Homepage/christina-wocintechchat-com-rCyiK4_aaWw-unsplash.jpg" alt="Second slide">
      </div>
      
    </div>
  </div>

<div class="container">
 
    <section class="">
        <h1 class="brand-slogan">Mentorships with Mentorapp</h1>
        <p>Creating opportunities to share stories and build meaningful connections for your career progression.</p>
    </section>
    
    <div class="row justify-content-center">
        <div class="connect-with-our-mentors">
            <h3>Connect with out mentors</h3>
        </div>
    </div>
    
    <div class="mentors">
        <%mentordata.forEach(mentor=>{%>
            <% if (!user.mentors.includes(mentor.slug)){ %>
            <div class="row mentor mentor-profilelink">
              <div class="col-6 ">
                  <div class="row mentor-profilelink">
                      <div class="col-3">
                        <a href="/mentorapp/mentors/<%=mentor.slug%>"><img class="profile-pic" src="<%=mentor.img%>"></a>   
                      </div>
                      <div class="col-9">
                        <h2><a class="mentor-name" href="/mentorapp/mentors/<%=mentor.slug%>"><%=mentor.firstname%> <%=mentor.lastname%></a></h2>
                        <h3><%= mentor.designation%> at <%= mentor.company %>  </h3>
                        <small><%=mentor.yearsOfExperience%> years of experience</small>
                      </div>
                    
                  </div>
                
            
            
                    
            
           
                <ul class="interest">
                    <% mentor.interests.forEach(interest=>{%>
                        <div class="interest-tags"><li class=""><%=interest%></li></div>
            
            
                <%})%>
            </ul>
            </div>
                
        </div>
            <%}})%>

    </div>
       
   
    
   
    
</div>




<%- include ('../partials/footer') %>

</body>
</html>

