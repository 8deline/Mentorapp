<%- include ('../partials/header') %>

<img class="profile-pic" src="<%=currentmentordata.img%>">

<h1><%=currentmentordata.firstname%> <%=currentmentordata.lastname%></h1>
<p><%=currentmentordata.designation%> at <%=currentmentordata.company%></p>
<p><%=currentmentordata.yearsOfExperience%> years of experience in <%=currentmentordata.industry%> industry</p>

<h1>I'm a mentor</h1>

<ul>
    <%currentmentordata.intention.forEach(intention=>{%>
        <li><%=intention%></li>

    <%})%>
</ul>

<p><%=currentmentordata.description%></p>

<% if (user.mentors.includes(currentmentordata.slug)){%>
    <button type="button" class="btn btn-success">Following</button>
<%} else {%>

<form method="POST" action="/mentorapp/mentors/<%=currentmentordata.slug%>/connect?_method=PATCH">
    <button type="submit" class="btn btn-success follow-status">Ask me to mentor</button>
</form>

<%}%>

<%- include ('../partials/footer') %>

<script src= "/javascript/mentorprofile.js"></script>

</body>
</html>